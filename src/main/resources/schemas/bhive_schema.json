{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "frameDefinition": {
      "properties": {
        "frames": {
          "type": "object",
          "patternProperties": {
            "^.*$": {"$ref": "#/definitions/spriteDefinition"}
          }
        }
      }
    },
    "spriteDefinition": {
      "type": "object",
      "properties": {
        "frame": {"$ref": "additional_defs.json#/definitions/x_y_w_h"},
        "offset": {"$ref": "additional_defs.json#/definitions/x_y"},
        "sourceSize": {"$ref": "additional_defs.json#/definitions/w_h"}
      },
      "required": ["frame", "offset", "sourceSize"]
    },
    "metaDefinition": {
      "type": "object",
      "properties": {
        "meta": {
          "type": "object",
          "properties": {
            "image": {"type": "string"},
            "format": {"type": "string"},
            "size": {"$ref": "additional_defs.json#/definitions/w_h"},
            "scale": {"type": "string"}
          },
          "required": ["image", "format", "size", "scale"],
          "additionalProperties": true
        }
      }
    }
  },
  "allOf": [
    {"$ref": "#/definitions/frameDefinition"},
    {"$ref": "#/definitions/metaDefinition"}
  ],
  "required": ["frames", "meta"]
}