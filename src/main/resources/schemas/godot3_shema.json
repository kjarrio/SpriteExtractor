{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "definitions": {
    "texturesDefinition": {
      "properties": {
        "textures": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/imageDefinition"
          }
        }
      }
    },
    "imageDefinition": {
      "properties": {
        "image": {"type": "string"},
        "size": {"$ref": "/schemas/addons.json#w_h"},
        "sprites": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/spriteDefinition"
          }
        }
      }
    },
    "spriteDefinition": {
      "type": "object",
      "properties": {
        "filename": {"type": "string"},
        "region": {"$ref": "/schemas/addons.json#x_y_w_h"},
        "margin": {"$ref": "/schemas/addons.json#x_y_w_h"}
      },
      "additionalProperties": false,
      "required": ["filename", "region", "margin"]
    }
  },
  "allOf": [
    {"$ref": "#/definitions/texturesDefinition"}
  ],
  "required": ["frames"]
}