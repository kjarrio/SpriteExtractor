{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/kjarrio/SpriteExtractor/main/src/main/resources/schemas/layaair_2_schema.json",
  "type": "object",
  "definitions": {
    "frameDefinition": {
      "properties": {
        "frames": {
          "type": "object",
          "patternProperties": {
            "^.*$": {"$ref": "#/definitions/spriteDefinition"}
          }
        }
      }
    },
    "spriteDefinition": {
      "type": "object",
      "properties": {
        "frame": {"$ref": "/schemas/addons.json#idx_x_y_w_h"},
        "spriteSourceSize": {"$ref": "/schemas/addons.json#x_y_w_h"},
        "sourceSize": {"$ref": "/schemas/addons.json#w_h"}
      },
      "required": ["frame", "spriteSourceSize", "sourceSize"]
    },
    "metaDefinition": {
      "type": "object",
      "properties": {
        "meta": {
          "type": "object",
          "properties": {
            "image": {"type": "string"},
            "prefix": {"type": "string"},
            "scale": {"type": "string"}
          },
          "required": ["image", "prefix", "scale"],
          "additionalProperties": false
        }
      }
    }
  },
  "allOf": [
    {"$ref": "#/definitions/frameDefinition"},
    {"$ref": "#/definitions/metaDefinition"}
  ],
  "required": ["frames", "meta"]
}